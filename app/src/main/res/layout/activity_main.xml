<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amam.order_reservation.MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/logtxtvw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="WELCOME TO HOTEL APP"
        android:textSize="24sp"
        android:layout_marginTop="60dp"
        android:textColor="@color/colorPrimary"
        />
    
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Email"
        android:textColorHint="@android:color/white"
        android:id="@+id/logEmail"
        android:layout_below="@id/logtxtvw1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="50dp"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColorHint="@android:color/white"
        android:id="@+id/logPassword"
        android:layout_below="@id/logEmail"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="50dp"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logButton"
        android:layout_below="@id/logPassword"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="50dp"
        android:text="Log in"
        android:textColor="@color/colorPrimary"
        android:background="@color/colorAccent"
        />

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@null"
        android:layout_below="@id/logButton"
        android:text="Not member? Register"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="15dp" />


</RelativeLayout>


</ScrollView>
